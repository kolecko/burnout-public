{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true,
        "semi": true,
        "importOrder": ["^react(.*)", "<THIRD_PARTY_MODULES>", "@/(.*)", "^[./]"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "plugins": ["@trivago/prettier-plugin-sort-imports"]
      }
    ]
  }
}